@{
    Layout = "~/Views/Shared/_Layout_2.cshtml";
    ViewData["Title"] = "User Assigned Content";
}

<div class="wrapper wrapper-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Assigned Content</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="footable table table-stripped" data-page-size="10">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.AssignedContent != null)
                                {
                                    @foreach (var item in ViewBag.AssignedContent)
                                    {
                                        <tr>
                                            <td>@item.Category</td>
                                            <td>@item.Name</td>
                                            <td>
                                                <form method="post" asp-action="DeleteAssignedContent" asp-controller="AssignUserController" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="assignId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this assignment?');">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="text-center">
                    <a href="@Url.Action("AssignContent", "AssignUser")" class="btn btn-primary">Back to Assignments</a>
                </div>

            </div>
        </div>
    </div>
</div>
